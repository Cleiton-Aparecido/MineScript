// Declaração de variáveis
bau x = 8;
bau y = -3;

// Função que soma dois valores
craftar soma(bau a, bau b) {
    fornalha a + b;      
}

// Função que calcula média (exemplo extra de operação aritmética) 
craftar media(bau a, bau b) {
    fornalha (a + b) / 2;
}

// Chamadas às funções
bau resultadoSoma   = soma(x, y);   
bau resultadoMedia  = media(x, y);   

// Impressão dos resultados
quadro("Soma: ",   resultadoSoma);
quadro("Média: ",  resultadoMedia);








